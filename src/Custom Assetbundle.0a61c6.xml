<Defaults>
  <!-- GENERIC PANELS -->
  <Panel
    class="settingsPanel"
    width="750"
    height="1100"
    padding="10 10 10 10"
    color="Black">
  </Panel>

  <Text
    class="panelHeader"
    color="#ffffff"
    alignment="UpperMiddle"
    fontSize="75">
  </Text>

  <Panel
    class="timerPanel"
    width="1000"
    height="500"
    padding="10 10 10 10"
    color="Black"
    outline="#ffffff"
    outlineSize="7 -7">
  </Panel>


  <!-- DECK SELECTOR PANEL -->
  <Row
    class="deckEntry"
    active="false"
    color="#ffffff"
    preferredHeight="175">
  </Row>

  <Button
    class="deckButton"
    color="#ffffff">
  </Button>

  <TableLayout
    class="deckTable"
    columnWidths="150 0"
    cellBackgroundColor="rgba(0,0,0,0)">
  </TableLayout>

  <VerticalLayout
    class="deckOfficial"
    active="false"
    childForceExpandHeight="false"
    childForceExpandWidth="false"
    childAlignment="MiddleCenter"
    flexibleHeight="1">
  </VerticalLayout>

  <VerticalLayout
    class="deckImageLayout"
    childForceExpandHeight="false"
    childForceExpandWidth="false"
    childAlignment="MiddleCenter"
    flexibleHeight="1">
  </VerticalLayout>

  <Image
    class="deckImage"
    active="false"
    preferredHeight="125"
    preserveAspect="true"
    raycastTarget="false">
  </Image>

  <Text
    class="officialStar"
    fontSize="100"
    color="Yellow">
  </Text>

  <Text
    class="officialText"
    fontSize="20"
    color="Black">
  </Text>

  <Text
    class="deckName"
    alignment="LowerLeft"
    fontSize="40"
    fontStyle="Bold">
  </Text>

  <Text
    class="deckAuthor"
    alignment="UpperLeft"
    fontSize="25"
    color="Grey">
  </Text>

  <Text
    class="deckDescription"
    active="false"
    alignment="UpperLeft"
    fontSize="20">
  </Text>


  <!-- GAME SETTINGS PANEL -->
  <Row
    class="subcategoryRow"
    preferredHeight="55">
  </Row>

  <Text
    class="subcategoryText"
    color="#99aab5"
    alignment="UpperMiddle"
    fontSize="45">
  </Text>

  <Row
    class="settingRow"
    preferredHeight="75">
  </Row>

  <Text
    class="settingText"
    color="#ffffff"
    fontSize="30">
  </Text>

  <Toggle
    class="settingToggle"
    scale="2 2">
  </Toggle>

  <TableLayout
    class="sliderTable"
    columnWidths="275 0"
    cellBackgroundColor="rgba(1,1,1,0)">
  </TableLayout>

  <Slider
    class="settingSlider"
    minValue="1"
    maxValue="10"
    wholeNumbers="true"
    interactable="true"
    scale="0.9 0.4">
  </Slider>

  <Text
    class="sliderNumber"
    fontSize="30"
    color="#ffffff">
  </Text>


  <!-- CODEMASTER QUEUE PANEL -->
  <Button
    class="queueButton"
    active="false"
    color="#ffffff">
  </Button>

  <Text
    class="queueText"
    fontSize="50">
  </Text>


  <!-- PASS TURN INDICATORS -->
  <Panel
    class="passIndicator"
    active="false"
    width="350"
    height="350"
    color="Black">
  </Panel>


  <!-- SWITCH COLOR BUTTONS -->
  <Button
    class="switchButton"
    active="false"
    visibility="Red|Orange|Yellow|Pink|Brown|Blue|Teal|Purple|Green|White"
    width="900"
    height="400">
  </Button>

  <Text
    class="switchText"
    fontSize="150"
    color="#ffffff"
    outline="#191919"
    outlineSize="5 -5">
  </Text>

